{% extends "layouts/app.twig" %}
{% import 'macros/base.twig' as m %}
{% import 'macros/form.twig' as f %}

{% block title %}{{ __('demo.title') }}{% endblock %}

{% block content %}
    <div class="col-12">
        <div class="container">
            <h1 class="mb-4">
                {{ block('title') }} <small class="text-muted">{{ __('demo.page') }}</small>
            </h1>
            <div class="row">
                <div class="col">
                    <form action="{{ url('/demo/save') }}" enctype="multipart/form-data" method="post">
                        {{ csrf() }}

                        {{ f.input('info', __('demo.input'), {'value': session_pop('form-data-info', user.state.demo_info)}) }}

                        {{ f.submit() }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
